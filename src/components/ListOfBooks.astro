---
import BookItem from "./BookItem.astro";
import { books } from "../data/books";

---

<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 px-4">
  {
    books.map((book) => {
      return (
        <li>
          <BookItem
            transition:name={`book ${book.id} box`}}
            
            id={book.id}
            title={book.title}
            img={book.img}
          />
        </li>
      );
    })
  }
</ul>
