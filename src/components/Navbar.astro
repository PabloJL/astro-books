---
import { SideMenu } from "./SideMenu";
import { ProfileToggle } from "./ProfileToggle";
import Search from "./Search";
---

<nav class="hidden md:block">
  <div class="flex flex-row gap-4 justify-between p-4">
    <SideMenu transition:name="side-menu" client:load />
    <div class="flex gap-4">
      <a
        href="/Search"
        class="inline-flex flex-col items-center rounded-full justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group"
      >
        <svg
          class="w-5 h-5 text-gray-500 dark:text-gray-400"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 20 20"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
        </svg>
      </a>
      <ProfileToggle client:load />
    </div>
  </div>
</nav>
