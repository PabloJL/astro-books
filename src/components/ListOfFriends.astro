---
import { friends } from "../data/friends";
---

<div class="w-full max-w-5xl p-4 rounded-lg shadow sm:p-8 mb-20">
  <div class="">
    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
      {
        friends.map((friend) => {
          return (
            <li class="py-3 px-3 md:px-0 sm:py-4">
              <a href={`/Friends/${friend.name}`}>
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <img
                      class="w-14 h-14 rounded-full md:w-20 md:h-20"
                      src={friend.img}
                      transition:name={`user ${friend.name} picture`}
                      alt="Neil image"
                    />
                  </div>
                  <div class="flex-1 min-w-0 ms-4">
                    <p class=" text-lg font-medium text-gray-900 truncate dark:text-white md:text-2xl">
                      {friend.name}
                    </p>
                    <p class="text-base text-gray-500 truncate dark:text-gray-400 md:text-lg">
                      {friend.status}
                    </p>
                  </div>
                  {/* <div
            class="inline-flex items-center text-base font-semibold text-gray-900 dark:text-white"
          >
            $320
          </div>  */}
                </div>
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</div>
