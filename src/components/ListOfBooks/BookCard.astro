---
export interface Props {
  id: string;
  title: string;
  img: string;
  author: string;
  pages: string;
}
const { id, title, img, author, pages } = Astro.props;
---

<div class="flex justify-center">
  <a
    href="#"
    class="flex flex-col w-full items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-zinc-800 dark:bg-zinc-900 dark:hover:bg-zinc-700"
  >
    <img
      class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg"
      src={img}
      alt={`Cover of book ${title}`}
    />
    <div class="flex flex-col justify-between p-4 leading-normal w-full">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
      <p class="mb-3 font-medium text-lg text-gray-700 dark:text-gray-400">
        {author}
      </p>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
        Started on: 25-04-2024
      </p>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
        100/{pages} pages
      </p>

      <div class="flex justify-end mb-1">
        <span class="text-sm font-medium text-blue-700 dark:text-white"
          >95%</span
        >
      </div>
      <div class="w-full bg-gray-200 rounded-full h-1.5 dark:bg-gray-700">
        <div class="bg-green-600 h-1.5 rounded-full" style="width: 95%"></div>
      </div>
    </div>
  </a>
</div>
