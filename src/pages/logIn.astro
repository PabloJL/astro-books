---
import Layout from "../layouts/LayoutOffLine.astro";
import Title from "../components/Title.astro";
import LogInCard from "../components/LogInCard.astro";
---

<Layout title="Sign-In">
  <main class="w-full h-screen flex">
    <section class="flex gap-2 w-full">
      <picture class="w-full h-full md:block hidden">
        <img
          class="w-full h-full rounded-lg object-cover"
          src="https://discoveririshkidsbooks.ie/wp-content/uploads/2023/08/Irish-childrens-books-e1693410021475.jpeg"
          alt="picture of books"
        />
      </picture>
      <div class="flex flex-col w-1/2 h-full items-center">
        <Title />
        <LogInCard />
      </div>
    </section>
  </main>
</Layout>
