---
import Layout from "../../layouts/Layout.astro";
import BookSection from "../../components/BookSection.astro";
import CommentsSection from "../../components/Comments/CommentsSection.astro";
import { slide } from "astro:transitions";
import { friends } from "../../data/friends";
const { friend } = Astro.params;

const info = friends.find((b) => b.name === friend);
if (!info) {
  return Astro.redirect("/404");
}

const { name, img } = info;
---

<Layout title=`Libro ${name}`>
  <main class="m-auto max-w-4xl flex flex-col">
    <h1>{name}</h1>
    <img src={img} alt="" />
  </main>
</Layout>
