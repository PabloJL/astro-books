---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import ListOfBooks from "../components/ListOfBooks.astro";
import BooksSlider from "../components/BooksSlider/BooksSlider";
---

<Layout title="JP Books">
  <main class="m-auto max-w-5xl mb-20 md:mb-0">
    <Title />
    <section class="mb-20">
      <h1
        class="text-4xl dark:text-white text-black px-4 font-black uppercase mb-4 text-center lg:text-start"
      >
        Trending
      </h1>
      <BooksSlider client:load />
    </section>
    <section class="mb-20">
      <h1
        class="text-4xl dark:text-white text-black px-4 font-black uppercase mb-4 text-center lg:text-start"
      >
        For you...
      </h1>
      <BooksSlider client:load />
    </section>
    <section>
      <h1
        class="text-4xl dark:text-white text-black px-4 font-black uppercase mb-4 text-center lg:text-start"
      >
        Horror
      </h1>
      <BooksSlider client:load />
    </section>
  </main>
</Layout>
